require '../../helpers/debian.rb'

task :default => [:build_php5, :build_php5j] do
  log "Default"
  log workdir
  log cachedir
end

task :build_php5 do
  pkg = 'php5'

  log "Building #{pkg}"
  debian_get_source pkg: pkg, quiet: false
  debuild
end

task :build_php5j do
  pkg = 'php-json'

  log "Building #{pkg}"
  debian_get_source pkg: pkg, quiet: false
  debuild quiet: false
end
